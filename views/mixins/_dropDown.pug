.dropdown.is-right.is-active
    .dropdown-trigger
        button.button.is-primary(aria-haspopup="true" aria-controls="dropdown-menu")
            span= user.name
            span.icon.is-small
                i.fa.fa-angle-down(aria-hidden="true")
    .dropdown-menu
        .dropdown-content
            a.dropdown-item(href="/profile") Profile
            a.dropdown-item(href="/logout") Logout