extends layout
block content
    form.form(action="/account" method="POST")
        .field
            label.label(for="name") Username
            input.input(type="text" name="name" value=user.name)
        .field
            label.label(for="email") Email Address
            input.input(type="email" name="email" value=user.email)
        .field
            input.button.is-primary(type="submit" value="Update Account")
            